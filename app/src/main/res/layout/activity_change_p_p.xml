<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_feed"
    tools:context=".changePPActivity">

    <ImageView
        android:id="@+id/changePP"
        android:layout_width="310dp"
        android:layout_height="207dp"
        android:layout_marginTop="36dp"
        android:onClick="selecetImageForChangePP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/selectimage" />

    <EditText
        android:id="@+id/igBio"
        android:layout_width="310dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="Biyografi"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePP" />

    <Button
        android:id="@+id/cikisYapButtonu"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="52dp"
        android:onClick="signOut"
        android:text="Çıkış Yap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/profilGuncelleme"
        android:layout_width="241dp"
        android:layout_height="56dp"
        android:layout_marginBottom="228dp"
        android:onClick="ppAndBioChange"
        android:text="Kaydet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>